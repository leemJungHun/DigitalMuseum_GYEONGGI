<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <Space
            android:id="@+id/startMargin"
            android:layout_width="@dimen/dimen_40"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toStartOf="@id/contentTxtView"
            />
        <Space
            android:id="@+id/startMargin2"
            android:layout_width="@dimen/dimen_40"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toStartOf="@id/contentTxtView2"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/contentTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/font_20"
            android:textColor="@color/white"
            android:fontFamily="@font/notoserifkr_medium"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/dimen_103"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/contentTxtView2"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/font_28"
            android:textColor="@color/white"
            android:fontFamily="@font/notoserifkr_medium"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/dimen_103"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>