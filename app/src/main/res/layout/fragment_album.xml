<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <variable
            name="fragment"
            type="kr.rowan.digital_museum_gyeonggi.fragment.AlbumFragment" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#CC000000" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dimen_238"
            android:layout_height="@dimen/dimen_58"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/dimen_60"
            android:layout_marginTop="@dimen/dimen_60"
            android:src="@drawable/logo_white"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/backImgView"
            android:layout_width="@dimen/dimen_282"
            android:layout_height="@dimen/dimen_282"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="@{fragment::onClick}"
            android:scaleType="centerCrop"
            android:src="@drawable/btn_back"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/titleTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/digital_museum"
            android:textColor="@color/white"
            android:textSize="@dimen/font_38"
            android:layout_marginTop="@dimen/dimen_156"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/titleLeftImgView"
            android:layout_width="@dimen/dimen_174"
            android:layout_height="@dimen/dimen_18"
            android:layout_marginEnd="@dimen/dimen_36"
            app:layout_constraintEnd_toStartOf="@id/titleTxtView"
            app:layout_constraintTop_toTopOf="@id/titleTxtView"
            app:layout_constraintBottom_toBottomOf="@id/titleTxtView"
            android:src="@drawable/deco_title_left"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/titleRightImgView"
            android:layout_width="@dimen/dimen_174"
            android:layout_height="@dimen/dimen_18"
            android:layout_marginStart="@dimen/dimen_36"
            app:layout_constraintStart_toEndOf="@id/titleTxtView"
            app:layout_constraintTop_toTopOf="@id/titleTxtView"
            app:layout_constraintBottom_toBottomOf="@id/titleTxtView"
            android:src="@drawable/deco_title_right"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/albumImgView1"
            android:layout_width="@dimen/dimen_466"
            android:layout_height="@dimen/dimen_300"
            android:layout_marginTop="@dimen/dimen_66"
            android:onClick="@{fragment::onClick}"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:text="1940 ~ 1968"
            android:fontFamily="@font/notoserifkr_medium"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/font_24"
            android:layout_marginEnd="@dimen/dimen_20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleTxtView"
            app:layout_constraintEnd_toStartOf="@id/albumImgView2"
            android:background="@drawable/img_01"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/albumImgView2"
            android:layout_width="@dimen/dimen_466"
            android:layout_height="@dimen/dimen_300"
            android:layout_marginTop="@dimen/dimen_66"
            android:onClick="@{fragment::onClick}"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:text="1969 ~ 1983"
            android:fontFamily="@font/notoserifkr_medium"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/font_24"
            android:layout_marginEnd="@dimen/dimen_20"
            app:layout_constraintStart_toEndOf="@id/albumImgView1"
            app:layout_constraintEnd_toStartOf="@id/albumImgView3"
            app:layout_constraintTop_toBottomOf="@id/titleTxtView"
            android:background="@drawable/img_02"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/albumImgView3"
            android:layout_width="@dimen/dimen_466"
            android:layout_height="@dimen/dimen_300"
            android:layout_marginTop="@dimen/dimen_66"
            android:onClick="@{fragment::onClick}"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:text="1984 ~ 1994"
            android:fontFamily="@font/notoserifkr_medium"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/font_24"
            app:layout_constraintStart_toEndOf="@id/albumImgView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleTxtView"
            android:background="@drawable/img_03"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/albumImgView4"
            android:layout_width="@dimen/dimen_710"
            android:layout_height="@dimen/dimen_300"
            android:layout_marginTop="@dimen/dimen_20"
            android:onClick="@{fragment::onClick}"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:text="1995 ~ 2004"
            android:fontFamily="@font/notoserifkr_medium"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginEnd="@dimen/dimen_20"
            android:textSize="@dimen/font_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/albumImgView5"
            app:layout_constraintTop_toBottomOf="@id/albumImgView1"
            android:background="@drawable/img_04"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/albumImgView5"
            android:layout_width="@dimen/dimen_710"
            android:layout_height="@dimen/dimen_300"
            android:layout_marginTop="@dimen/dimen_20"
            android:onClick="@{fragment::onClick}"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:text="2005 ~ 현재"
            android:fontFamily="@font/notoserifkr_medium"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/font_24"
            app:layout_constraintStart_toEndOf="@id/albumImgView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/albumImgView1"
            android:background="@drawable/img_05"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>